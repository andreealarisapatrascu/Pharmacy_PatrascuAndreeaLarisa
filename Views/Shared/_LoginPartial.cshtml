@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <i class="fas fa-user-circle"><a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Salut @UserManager.GetUserName(User)!</a></i>
</li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <i class="fas fa-user-times"><button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button></i>
</form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <i class="fas fa-user-plus"><a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></i>
</li>
        <li class="nav-item">
            <i class="fas fa-user-md"><a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></i>
</li>
    }
</ul>
