@model IEnumerable<PharmacyModel.Models.Furnizor>

@{
    ViewData["Title"] = "Index";
}


<html>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {
            'packages': ['geochart'],
            // Note: you will need to get a mapsApiKey for your project.
            // See: https://developers.google.com/chart/interactive/docs/basic_load_libs#load-settings
            'mapsApiKey': 'AIzaSyD-9tSrke72PouQMnMX-a7eZSW0jkFMBWY'
        });
        google.charts.setOnLoadCallback(drawRegionsMap);

        function drawRegionsMap() {
            var data = google.visualization.arrayToDataTable([
                ['Ţară', 'Număr de produse'],
                ['Romania', 4],
                ['Iceland', 1]
            ]);

            var options = {};

            var chart = new google.visualization.GeoChart(document.getElementById('regions_div'));

            chart.draw(data, options);
        }
    </script>
</head>
<body>
    <div class="text-center">
        <img src="~/Images/furnizor.jpg" asp-append-version="true" style="height:200px; object-fit: cover;">
    </div>
    <center><h1>FURNIZORI MEDICAMENTE</h1></center>

    <div id="regions_div" style="width: 900px; height: 500px;"></div>

    <p><i class="fas fa-plus-circle"><a asp-action="Create">Adaugă un nou produs</a></i></p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NumeFurnizor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adresa)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeFurnizor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adresa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefon)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.FurnizorID">Editează</a> |
                        <a asp-action="Details" asp-route-id="@item.FurnizorID">Detalii</a> |
                        <a asp-action="Delete" asp-route-id="@item.FurnizorID">Şterge</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
