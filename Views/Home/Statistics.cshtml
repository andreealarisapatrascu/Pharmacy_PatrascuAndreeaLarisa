@model IEnumerable<Pharmacy_PatrascuAndreeaLarisa.Models.PharmacyViewModels.OrderGroup>
@{
    ViewData["Title"] = "Statistici";
}


    <html>
    <head>
        <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
        <script type="text/javascript">
            google.charts.load("current", { packages: ["corechart"] });
            google.charts.setOnLoadCallback(drawChart);
            function drawChart() {
                var data = google.visualization.arrayToDataTable([
                    ['Categorie', 'Tipuri de medicamente'],
                    ['Durere', 2],//1
                    ['Răceală şi gripă', 3],//2
                    ['Cardiovascular', 1],//3
                    ['Dermatologie', 0],//4
                    ['Afecţiuni gastointestinale', 1]//5
                ]);

                var options = {
                    title: 'Medicamente pe categorii',
                    is3D: true,
                };

                var chart = new google.visualization.PieChart(document.getElementById('piechart_3d'));
                chart.draw(data, options);
            }
        </script>
    </head>
    <body>
        <h2>Statistică dată de expirare a produselor</h2>
        <table>
            <tr>
                <th>
                    Dată de expirare
                </th>
                <th>
                    Număr produse
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpirationDate)
                    </td>
                    <td>
                        @item.NumarProduse
                    </td>
                </tr>
            }
        </table>
        <div></div>
        <h2>Statistică număr de produse pe categorii</h2>
        <div id="piechart_3d" style="width: 900px; height: 500px;"></div>
    </body>
    </html>